<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tacchella.arduini.com.time_waiting_counter.MainActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent">

        <TextClock
            android:id="@+id/clock"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/title"
            android:format12Hour="hh:mm:ss a"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:textStyle="bold" />


        <Button
            android:id="@+id/startChronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clock"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/startChronometer"/>

         <!--android:background="@color/green"-->


        <LinearLayout
            android:id="@+id/buttonsMove"
            android:layout_width="fill_parent"
            android:layout_margin="0dp"
            android:layout_height="50dp"
            android:weightSum="4"
            android:layout_below="@id/startChronometer" >

            <TextView
                android:id="@+id/timeStop"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_margin="0dp"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/timeStop"
                android:textColor="#000"

                android:layout_weight="2"
                />

            <Chronometer
                android:id="@+id/timerChronometerMove"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_margin="0dp"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/timerChronometerMove"
                android:textColor="#000"

                android:layout_weight="2"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/buttonsStop"
            android:layout_width="fill_parent"
            android:layout_margin="0dp"
            android:layout_height="50dp"
            android:weightSum="4"
            android:layout_below="@id/buttonsMove" >

            <TextView
                android:id="@+id/timeMove"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_margin="0dp"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/timeMove"
                android:textColor="#000"
                android:layout_weight="2"
                />

            <Chronometer
                android:id="@+id/timerChronometerStop"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_margin="0dp"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/timerChronometerStop"
                android:textColor="#000"

                android:layout_weight="2"
                />



        </LinearLayout>

        <Button
            android:id="@+id/resetChronometer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonsStop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/reset" />


        <TextView
            android:id="@+id/speedometer"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_margin="0dp"
            android:layout_below="@+id/resetChronometer"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/speedometer"
            android:textColor="#000"
            />

        <Button
            android:id="@+id/history"
            android:layout_margin="0dp"
            android:layout_below="@+id/speedometer"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/history"
            android:textColor="#000"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"

            />

    </RelativeLayout>

    <TextView
        android:id="@+id/speedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:height="70dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/cardo"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>





